@model Rocky_1.Models.Category_1

<form method="post" asp-action="Create">
    <div class=" border p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3">Add Category</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="mb-2 row">
                    <div class="col-4">
                        <label asp-for="Name"></label>           <!--Tag-helper label => [DisplayName(" ")].-->
                        
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />       <!--input asp-for="Name" => field string input. -->
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                </div>
                <div class="mt-2 row">        <!--class="form-group row" =>  class="mb-2 row"-->
                    <div class="col-4">
                        <label asp-for="DisplayOrder"></label>
                        
                    </div>
                    <div class="col-8">
                        <input asp-for="DisplayOrder" class="form-control" />
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>

                </div>
                <div class="mt-3 row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Create" />   <!--CREATE BUTTON-->
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">
                                Back &nbsp;<i class="fa-solid fa-right-from-bracket"></i>
                            </a>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>

    </div>

</form>

@section Scripts{
    @{<partial name="_ValidationScriptsPartial"/>}
}