@model Rocky_1.Models.Product_1

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-4">

        <div class="col form-group row">
            <h2 class="col text-info">Delete Product_1</h2>
        </div>
        <br />
        <br />

        <div class="row">
            <div class="col-8 row">

                <div class="row mb-2">
                    <div class="col-4">
                        <label asp-for="Name" class="form-control"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control" />
                    </div>
                </div>

                <div class="row mb-2 ">
                    <div class="col-4">
                        <label asp-for="Price" class="form-control"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" disabled class="form-control" />
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-4">
                        <label asp-for="Description" class="form-control"></label>
                    </div>
                    <div class="col-8">
                        <textarea id="summernote" asp-for="Description" class="form-control"></textarea>
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-4">
                        <label asp-for="Image" class="form-control"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Image" class="form-control" />
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-4">
                        <label asp-for="Category_1_Id" class="form-control"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Category_1.Name" disabled class="form-control" />
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-4">
                        <label asp-for="ApplicationType_1_Id"  class="form-control"></label>
                    </div>

                    <div class="col-8">
                        <input asp-for="ApplicationType_1.Name" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">

                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <button type="submit" class="btn btn-danger w-100">Delete</button>
                        </div>

                        <div class="col">
                            <button asp-action="Index" type="submit" class="btn btn-info w-100">Back</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-4">
                @if (Model.Id != 0)
                {
                    <img src="@WC.ImagePath@Model.Image" alt="Image" width="100%" style="border: 1px solid; border-radius:5px" />
                }
            </div>

        </div>

    </div>

</form>

@section scripts
{
    <script>
        $(document).ready(function () {
            $('#summernote').summernote({
               placeholder: 'Hello',
               height:70,
               disable:true
            });
        });
    </script>
}

